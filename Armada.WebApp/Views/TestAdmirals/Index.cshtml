@model IEnumerable<ArmadaV3.Entities.Admiral>

@{
    ViewBag.Title = "Index";
}

<h2 class="p-4">Admirals</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new {@class="pl-4"})
</p>

<table class="table table-hover">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            Empire Name
        </th>
        <th>
            Admiral Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            Enlistment Date
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Specialty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Species)
        </th>
        <th>
            Actions
        </th>
    </tr>
    </thead>
    <tbody>


        @foreach (var item in Model)
        {
            <tr class="table-active">
                <td>
                    @Html.DisplayFor(modelItem => item.Photo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empire.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @item.EnlistmentDate.ToString("d")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specialty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Species)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.AdmiralId}) |
                    @Html.ActionLink("Details", "Details", new {id = item.AdmiralId}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.AdmiralId})
                </td>
            </tr>

        }
    </tbody>
</table>
